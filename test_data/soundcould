&lt;th align=&quot;left&quot;&gt;&lt;code class=&quot;language-text&quot;&gt;is_current&lt;/code&gt;&lt;/th&gt;
&lt;/tr&gt;
&lt;/thead&gt;
&lt;tbody&gt;
&lt;tr&gt;
&lt;td align=&quot;left&quot;&gt;1&lt;/td&gt;
